{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
